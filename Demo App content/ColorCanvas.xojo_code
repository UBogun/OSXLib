#tag Class
Protected Class ColorCanvas
Inherits Canvas
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  RaiseEvent ChangeColor
		  g.ForeColor = BGColor
		  g.FillRect 0,0,g.Width, g.Height
		  if BGColor.Value < 0.5 then
		    g.ForeColor = BGColor.HighlightColor (0.5)
		  else
		    g.ForeColor = BGColor.ShadowColor (0.5)
		  end if
		  g.DrawString BGColor.totext,10, g.Height - 20
		  g.DrawString label,10,  20
		  
		  
		End Sub
	#tag EndEvent


	#tag Hook, Flags = &h0
		Event ChangeColor()
	#tag EndHook


